<header id="header-menu" class="bg-gray-800 text-white fixed w-full top-0 z-50 shadow">
  <div class="container mx-auto flex items-center justify-between p-4">
    
    <%= link_to "Twitter", root_path, id: "logo", class: "text-xl font-bold text-white hover:text-gray-300" %>

    <button id="hamburger" class="md:hidden flex flex-col justify-between w-6 h-6 focus:outline-none" aria-label="Toggle menu">
      <span class="block w-full h-0.5 bg-white"></span>
      <span class="block w-full h-0.5 bg-white"></span>
      <span class="block w-full h-0.5 bg-white"></span>
    </button>

    <nav id="navbar-menu" class="hidden md:flex md:items-center space-x-6">
      <%= link_to "Home", root_path, class: "hover:text-gray-300" %>
      <%= link_to "Help", help_path, class: "hover:text-gray-300" %>    

      <% if logged_in? %>
        <%= link_to "Users", users_path, class: "hover:text-gray-300" %>


        <div class="relative">
  <input type="text" id="user-search-input" placeholder="Search users..." autocomplete="off" class="px-2 py-1 rounded" />

  <div id="search-results" class="absolute mt-1 w-64 bg-white rounded shadow-lg hidden">
    <!-- results will be injected here -->
  </div>
</div>


        

        <div class="relative group">
          <button id="account" class="flex items-center space-x-1 hover:text-gray-300">
            <span>Account</span>
            <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path d="M5.25 7.5l4.5 4.5 4.5-4.5H5.25z"/>
            </svg>
          </button>
          <ul id="menu" class="absolute right-0 mt-2 w-40 bg-white text-gray-800 rounded shadow-lg hidden">
            <li><%= link_to "Profile", current_user, class: "block px-4 py-2 hover:bg-gray-200" %></li>
            <li><%= link_to "Settings", edit_user_path(current_user), class: "block px-4 py-2 hover:bg-gray-200" %></li>
            <li><hr class="my-1 border-gray-300"></li>
            <li>
              <%= link_to "Log out", logout_path, data: { turbo_method: :delete }, class: "block px-4 py-2 hover:bg-gray-200" %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Log in", login_path, class: "hover:text-gray-300" %>
      <% end %>
    </nav>
  </div>

  <div id="mobile-menu" class="md:hidden hidden bg-gray-700">
    <%= link_to "Home", root_path, class: "block px-4 py-2 text-white hover:bg-gray-600" %>
    <%= link_to "Help", help_path, class: "block px-4 py-2 text-white hover:bg-gray-600" %>

    <% if logged_in? %>
      <%= link_to "Users", users_path, class: "block px-4 py-2 text-white hover:bg-gray-600" %>
      <%= link_to "Profile", current_user, class: "block px-4 py-2 text-white hover:bg-gray-600" %>
      <%= link_to "Settings", edit_user_path(current_user), class: "block px-4 py-2 text-white hover:bg-gray-600" %>
      <%= link_to "Log out", logout_path, data: { turbo_method: :delete }, class: "block px-4 py-2 hover:bg-gray-200" %>
    <% else %>
      <%= link_to "Log in", login_path, class: "block px-4 py-2 text-white hover:bg-gray-600" %>
    <% end %>
  </div>

  <!-- Plain JS for live search -->
  <script>
    const input = document.getElementById('user-search-input');
    const form = document.getElementById('user-search-form');
    const resultsFrame = document.getElementById('search-results-frame');

    let timeout = null;

    input.addEventListener('input', () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        if (input.value.trim() === "") {
          resultsFrame.innerHTML = "";
          resultsFrame.classList.add('hidden');
        } else {
          form.requestSubmit(); // submit the form to turbo frame
        }
      }, 300);
    });

    // Show results frame when content is loaded
    document.addEventListener('turbo:frame-load', (event) => {
      if (event.target.id === 'search-results-frame') {
        if (event.target.innerHTML.trim() === "") {
          event.target.classList.add('hidden');
        } else {
          event.target.classList.remove('hidden');
        }
      }
    });
  </script>
</header>
