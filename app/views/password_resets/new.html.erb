<% provide(:title, "Forgot password") %>

<h1 class="text-2xl font-bold mb-6 text-center mt-6">Forgot password</h1>

<div class="flex justify-center">
  <div class="w-full max-w-md">
    <%= form_with(url: password_resets_path, scope: :password_reset, class: "space-y-6") do |f| %>
      
      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email,
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Submit",
              class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition" %>
      </div>

    <% end %>
  </div>
</div>
