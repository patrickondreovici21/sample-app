<% provide(:title, 'Reset password') %>

<h1 class="text-2xl font-bold mb-6 text-center mt-6">Reset password</h1>

<div class="flex justify-center">
  <div class="w-full max-w-md">
    <%= form_with(model: @user, url: password_reset_path(params[:id]), class: "space-y-6") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= hidden_field_tag :email, @user.email %>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password,
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmation", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation,
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Update password",
              class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>
