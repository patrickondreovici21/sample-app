<% provide(:title, "Log in") %>

<div class="max-w-md mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-6 text-center">Log in</h1>

  <%= form_with(url: login_path, scope: :session, class: "space-y-6") do |f| %>
    
    <div>
      <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Log in", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition" %>
    </div>

  <% end %>

  <p class="mt-4 text-center text-gray-700">
    New user? 
    <%= link_to "Sign up now!", signup_path, class: "text-blue-600 hover:underline" %>
  </p>
</div>
