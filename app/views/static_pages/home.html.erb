<% if logged_in? %>
<div class="flex flex-col md:flex-row md:space-x-6 py-8">
  <aside class="w-full md:w-1/3 space-y-6 mb-10">
    <section class="user_info bg-white p-4 rounded-xl shadow">
      <%= render 'shared/user_info' %>
    </section>

    <section>
      <%= render 'shared/stats' %>
    </section>

    <section class="micropost_form bg-white p-4 rounded-xl shadow">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="w-full md:w-2/3 space-y-4 bg-white p-4 rounded-xl shadow">
    <h3 class="text-lg font-semibold text-gray-700 border-b pb-2">
      Micropost Feed
    </h3>
    <%= render 'shared/feed' %>
    <div class="flex justify-center mt-8">
        <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
<% else %>
<div class="text-center bg-gray-100 py-16 px-4">
  <h1 class="text-5xl font-bold mb-4">Welcome to the Sample App</h1>
  <h2 class="text-xl text-gray-700 mb-6">
    This is the home page for the
    <a href="https://www.railstutorial.org/" class="text-blue-600 hover:underline">
      Ruby on Rails Tutorial
    </a>
    sample application.
  </h2>
  <%= link_to "Sign up now!", signup_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg transition" %>
</div>

<div class="mt-8 text-center">
  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"), "https://rubyonrails.org/" %>
</div>

<% end %>