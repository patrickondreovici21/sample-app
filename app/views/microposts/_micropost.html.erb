    <div class="flex-1">
      <div class="flex items-center space-x-2">
        <span class="font-semibold text-gray-800">
          <%= link_to micropost.user.name, micropost.user, class: "hover:underline" %>
        </span>
        <span class="text-xs text-gray-500">
