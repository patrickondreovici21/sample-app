<% provide(:title, @user.name) %>

<div class="container mx-auto px-4 py-8 flex flex-col md:flex-row gap-8">
  
  <aside class="md:w-1/3">
    <section class="bg-white p-6 rounded-2xl shadow-md mb-4">
      <div class="flex items-center space-x-4">
        <%= gravatar_for @user, size: 80 %>
        <h1 class="text-2xl font-bold text-gray-800"><%= @user.name %></h1>
      </div>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="flex-1">
    <%= render 'follow_form' if logged_in? %>
    <% if @microposts.any? %>
      <h3 class="text-xl font-semibold text-gray-700 mb-4">
        Microposts 
        <span class="text-gray-500 text-base">(<%= @microposts.count %>)</span>
      </h3>

      <ol class="space-y-4">
        <%= render @microposts %>
      </ol>

      <div class="flex justify-center mt-8">
        <%== pagy_nav(@pagy) %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">This user hasnâ€™t posted anything yet.</p>
    <% end %>
  </div>

</div>
